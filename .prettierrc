printWidth: 120
singleQuote: true
tabWidth: 2
useTabs: false

plugins:
  - '@prettier/plugin-xml'
  - prettier-plugin-gherkin
  - prettier-plugin-java
  - prettier-plugin-packagejson

xmlWhitespaceSensitivity: ignore

overrides:
  - files: '*.java'
    options:
      tabWidth: 4
  - files: '*.jsonc'
    options:
      trailingComma: none
